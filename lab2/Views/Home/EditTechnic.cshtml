@{
    ViewBag.Title = "Редактировать технику";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model  lab2.Models.Technic
<h2>Техника</h2>
@using (Html.BeginForm("EditTechnic", "Home", FormMethod.Post))
{
<fieldset>

    @Html.HiddenFor(model => model.Id)

   <p>
        Название техники <br />
        @Html.EditorFor(model => model.Name)
    </p>
    <p>
        Склад <br />
        @Html.DropDownListFor(model => model.StorageId, ViewBag.Shops as SelectList)
    </p> 
    <p>
        Цена <br />
        @Html.EditorFor(model => model.Price)
    </p>
	<p>
        Отработанные часы <br />
        @Html.EditorFor(model => model.Hours)
    </p>
	<p>
        Планируемые часы <br />
        @Html.EditorFor(model => model.PlannedHours)
    </p>
    <p>
        Картинка <br />
        @Html.EditorFor(model => model.img)
    </p>
    <p>
        <input type="submit" value="Сохранить" />
    </p>
</fieldset>
}
<div>
    @Html.ActionLink("Вернуться к списку складов", "Index")
</div>